<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWeather.MVVM.Views.WeatherView"
             xmlns:converters="clr-namespace:MauiWeather.Converters"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="WeatherView">

    <!-- Ressourcen für Konverter -->
    <ContentPage.Resources>
        <converters:CodeToWeatherConverter x:Key="CodeToWeatherConverter" />
        <converters:CodeToLottieConverter x:Key="CodeToLottieConverter" />
    </ContentPage.Resources>

    <Grid Margin="15" RowDefinitions=".08*,.1*,.5*,.1*,.3*">
        <!-- Suchleiste -->
        <Grid>
            <Frame />
            <SearchBar 
                       x:Name="searchBar" 
                       Placeholder="Search"  
                       SearchCommand="{Binding SearchCommand}"
                       SearchCommandParameter="{Binding Source={x:Reference searchBar}, Path=Text}"
                       VerticalOptions="Center" />
        </Grid>
        <!-- Ortsname und Datum -->
        <VerticalStackLayout 
            Grid.Row="1" 
            Style="{StaticResource MainStackLayout}" 
            IsVisible="{Binding IsVisible}">
            <Label Style="{StaticResource Tittel}" Text="{Binding PlaceName}" />
            <Label Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}" />
        </VerticalStackLayout>
        <!-- Lottie-Animation für das aktuelle Wetter -->
        <skia:SKLottieView
            Grid.Row="2"
            RepeatCount="-1"
            Source="{Binding WeatherData.current_weather.weathercode, Converter={StaticResource CodeToLottieConverter}}" />
        <!-- Wetterdetails -->
        <Grid 
            Grid.Row="3" ColumnDefinitions="*,*,*" 
            IsVisible="{Binding IsVisible}">
            <VerticalStackLayout 
                HorizontalOptions="Center" 
                Spacing="10">
                <Label Text="Temp" Style="{StaticResource WeatherTittel}"/>
                <Label Text="{Binding WeatherData.current_weather.temperature, StringFormat='{0}°C'}" Style="{StaticResource WeatherValue}"/>
            </VerticalStackLayout>
            <VerticalStackLayout 
                Grid.Column="1" HorizontalOptions="Center" 
                Spacing="10">
                <Label Text="Wind" Style="{StaticResource WeatherTittel}"/>
                <Label Text="{Binding WeatherData.current_weather.windspeed, StringFormat='{0}km/h'}" Style="{StaticResource WeatherValue}"/>
            </VerticalStackLayout>
            <VerticalStackLayout 
                Grid.Column="2" HorizontalOptions="Center" 
                Spacing="10">
                <Label Text="Weather" Style="{StaticResource WeatherTittel}"/>
                <Label Text="{Binding WeatherData.current_weather.weathercode, Converter={StaticResource CodeToWeatherConverter}}" Style="{StaticResource WeatherValue}"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Vorhersage für die kommenden Tage -->
        <CollectionView 
            Grid.Row="4" 
            ItemsSource="{Binding WeatherData.daily2}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource card}">
                        <VerticalStackLayout>
                            <skia:SKLottieView
                                IsAnimationEnabled="False"
                                HeightRequest="50"
                                WidthRequest="50" 
                                Source="{Binding weathercode, Converter={StaticResource CodeToLottieConverter}}" />
                            <Label Text="{Binding time}" TextColor="{StaticResource Yellow100Accent}" />
                            <Label Text="{Binding temperature_2m_max, StringFormat='{0}°C'}" />
                            <Label Text="{Binding weathercode, Converter={StaticResource CodeToWeatherConverter}}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Ladeanzeige -->
        <Grid 
            Grid.RowSpan="5" 
            Margin="-15" 
            BackgroundColor="Black" 
            IsVisible="{Binding IsLoading}"
            Opacity="0.9">
            <ActivityIndicator IsRunning="True" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>